.card.card-default
  .card-heading Information
  .card-body
    = bootstrap_form_for @map, url: meta_map_path(@map) do |f|
      = render 'map_form', f: f

      = f.submit 'Update'
      = link_to 'Cancel', meta_map_path(@map), class: 'btn btn-default'

.card.card-danger
  .card-heading Danger Zone!
  .card-body
    = button_to meta_map_path(@map), method: :delete, class: 'btn btn-danger',
                data: { confirm: 'Are you sure you want to delete this Map?' } do
      %span.glyphicon.glyphicon-trash
      Delete
