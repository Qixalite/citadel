- content_for(:title) { 'Users' }

%h1.tab-header Users

.col-sm-3.col-md-3.searchbox.pull-right
  = render 'search'

%hr

.card.card-default
  - if @users.empty?
    .card-body No users found...

  - else
    %ul.list-group
      - @users.each do |user|
        %li.list-group-item
          = render 'users/listing', user: user

= bootstrap_paginate @users
