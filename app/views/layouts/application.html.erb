<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>match.tf - <%= yield :head %></title>
	<%= stylesheet_link_tag 'application' %>  
	<%=javascript_include_tag 'application'%>  	
	<!--Custom Font-->
	<link href="https://fonts.googleapis.com/css?family=Anton|Lato" rel="stylesheet">
</head>
<body>
<%= render 'admin_bar' %>
	<nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
		<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sidebar-collapse"><span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span></button>
				<a class="navbar-brand" href="<%= pages_home_path %>"><span>MATCH</span>.TF</a>
				<ul class="nav navbar-top-links navbar-right">
				<% if user_signed_in? %>
					<%= render 'notifications', notifications: @notifications %>
				<%else %>
					<%= render 'user_signin' %>	
				<% end %>
				</ul>
			</div>
		</div><!-- /.container-fluid -->
	</nav>
	<div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
		<% if user_signed_in? %>
		<div class="profile-sidebar">
			<div class="profile-userpic">
				<img src="<%= current_user.avatar.icon.url %>" class="img-responsive" alt="">
			</div>
			<div class="profile-usertitle">
				<div class="profile-usertitle-name"><%= render 'user_dropdown' %></div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="divider"></div>
		<% end %>
		<ul class="nav menu">
		<%= render "navbar" %>
		</ul>
	</div><!--/.sidebar-->
		
	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
	<div class="panel panel-container">
	<div class="row">
	<%= yield %>
	</div>
	</div>
	</div>
		
</body>
</html>